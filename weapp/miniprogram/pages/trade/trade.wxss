/* pages/trade/trade.wxss */

page {
  --green: #39b54a;
  --grey: #8799a3;
}

.content {
  padding-bottom: 0;
}

.position-bar  {
  padding: 16rpx 0;
}

/* 覆盖.van-cell-group--inset的margin样式 */
.position-bar .card {
  margin: 0 16rpx;
}

.commodity {
  background-color: white;
  margin: 0 16rpx;
  border-radius: 16rpx;
}

.commodity .title {
  padding: 20rpx;
  font-size: 15px;
  font-weight: 600;
}

.commodity .commodity-bar {
  display: flex;
  padding: 15rpx;
}

.commodity .commodity-bar .image {
  border-radius: 20rpx;
}

.commodity .commodity-bar .com-desc {
  padding-left: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 14px;
  font-weight: 500;
}

.trade {
  margin: 10rpx 16rpx;
}

.trade .exchange {
  background-color: white;
}

.trade .exchange .uploader {
  padding: 10rpx 30rpx;
}

.bottom {
  position: fixed;
  width: 100%;
  bottom: 0;
  z-index: 20;
  background-color: white;
}

.bottom .notice {
  width: 100%;
}

.bottom .btn-bar {
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  padding: 20rpx;
}

.bottom .btn-bar .btn {
  margin-left: 10rpx;
  height: 50rpx;
  background-color: var(--green);
  color: white;
  font-size: 13px;
  border-radius: 10rpx;
}

.bottom .ios-white {
  width: 100%;
  height: env(safe-area-inset-bottom);
}