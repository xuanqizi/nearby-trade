/* components/orderCard/index.wxss */

.order-card {
  background-color: white;
  margin: 5px;
  border-radius: 20px;
  width: calc(100% - 10px);
}

.order-card .top {
  width: 100%;
  padding-top: 20rpx;
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-card .top .type {
  padding-left: 30rpx;
  font-weight: 600;
  font-size: 0.9em;
}

.order-card .top .status {
  padding-right: 30rpx;
  color: grey;
  font-size: small;
}

.order-card .content {
  width: calc(100% - 10px);
  height: 200rpx;
  display: flex;
  padding-left: 10px;
  margin-bottom: -40rpx;
  justify-content: space-between;
  align-items: center;
}

.order-card .content .title {
  width: 100%;
  padding-left: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 14px;
}

.order-card .content .price {
  width: 200rpx;
  padding-right: 50rpx;
}

.order-card .content .tags {
  width: 200rpx;
}

.order-card .bottom {
  display: flex;
  justify-content: flex-start;
  flex-direction: row-reverse;
  padding-right: 30rpx;
  padding-bottom: 10rpx;
}

.order-card .bottom button {
  width: 150rpx;
  font-weight: 400;
  margin-left: 10rpx;
}

.order-card .bottom .space {
  width: 100%
}